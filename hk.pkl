// Install with `hk install --mise` to ensure local tools are available
// Docs: https://hk.jdx.dev/about.html
//  `hk run pre-push --fix --from-ref=main`
//  `hk run pre-commit --all --step=pyright:dagster-taskiq`

amends "package://github.com/jdx/hk/releases/download/v1.20.0/hk@1.20.0#/Config.pkl"
import "package://github.com/jdx/hk/releases/download/v1.20.0/hk@1.20.0#/Builtins.pkl"

min_hk_version = "1.20.0"

local linters = new Mapping<String, Step> {
  // ["actionlint"] = Builtins.actionlint // GitHub Actions
  ["check-added-large-files"] = (Builtins.check_added_large_files) {
    exclude = "**/uv.lock"
  }
  ["check-merge-conflict"] = Builtins.check_merge_conflict
  ["check-symlinks"] = Builtins.check_symlinks
  ["end-of-file-fixer"] = Builtins.newlines
  // ["hadolint"] = Builtins.hadolint // Dockerfile - flags `COPY --from=<>` from Bake
  ["mdformat"] = new Step {
    glob = "**/*.md"
    check = "mdformat --check {{files}}"
    fix = "mdformat {{files}}"
  }
  ["mixed-line-ending"] = Builtins.mixed_line_ending
  ["pch-check-symlinks"] = Builtins.check_symlinks
  ["python-debug-statements"] = Builtins.python_debug_statements
  ["trailing-whitespace"] = Builtins.trailing_whitespace
  ["toml-sort"] = new Step {
    glob = "**/*.toml"
    check = "toml-sort --check {{files}}"
    fix = "toml-sort --trailing-comma-inline-array --in-place {{files}}"
  }
  ["pkl"] = (Builtins.pkl) {
    check = "pkl format {{files}}"
    fix = "pkl format --write {{files}}"
    stage = "**/*.pkl"
  }
  // TODO: See other builtins from: https://hk.jdx.dev/builtins.html
}

local commit_msg_checks = new Mapping<String, Step> {
  ["commitizen"] {
    check = "cz check --allow-abort --commit-msg-file={{commit_msg_file}}"
  }
}
local pre_push_checks = new Mapping<String, Step> {
  ["checks"] {
    check = "mise run //...:checks"
  }
  ["commitizen-branch"] {
    check = "cz check --rev-range origin/HEAD..HEAD"
  }
}

// FYI: there are additional configuration options for batch, workspace_indicator, etc. https://hk.jdx.dev/configuration.html
hooks {
  ["pre-commit"] {
    fix = true
    steps = linters
  }
  ["pre-push"] {
    steps {
      // FYI: PRs aren't required for this project
      // ["no-commit-to-branch"] {
      //     check = "no-commit-to-branch --branch=main"
      // }
      ...pre_push_checks
    }
  }
  ["commit-msg"] {
    steps = commit_msg_checks
  }

  // "fix" and "check" are special steps for `hk fix` and `hk check` commands
  ["fix"] {
    fix = true
    steps {
      ...pre_push_checks
      ...linters
    }
  }
  ["check"] {
    steps {
      ...pre_push_checks
      ...linters
    }
  }
}
